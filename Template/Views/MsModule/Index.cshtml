@using Template.ViewModels  
@model List<MsModuleViewModel>;
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Welcome To Ms Module</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <div class="row">
        <div class="container">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Module ID</th>
                        <th>Module Desc</th>
                        <th>Info 1</th>
                        <th>Info 2</th>
                        <th>Info 3</th>
                        <th>Creator</th>
                        <th>Date Created</th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model != null)
                    {
                        foreach(var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.ModuleId)</td>
                                <td>@Html.DisplayFor(modelItem => item.ModuleDesc)</td>
                                <td>@Html.DisplayFor(modelItem => item.Info1)</td>
                                <td>@Html.DisplayFor(modelItem => item.Info2)</td>
                                <td>@Html.DisplayFor(modelItem => item.Info3)</td>
                                <td>@Html.DisplayFor(modelItem => item.CrtUsrId)</td>
                                <td>@Html.DisplayFor(modelItem => item.TsCrt)</td>
                                <td>
                                    <input type="button" class="btn btn-sm btn-primary " value="AddOrUpdate" id="AddOrUpdate"/>
                                    <input type="button" class="btn btn-sm btn-danger" value="btnDelete" id="btnDelete"/>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
<script>
    $(function (){
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        })

    }
</script>
