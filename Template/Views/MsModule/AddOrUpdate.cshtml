@using Template.ViewModels
@model MsModuleViewModel
@{
    ViewData["Title"] = "Home Page";
    //Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Master Module</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="MsModule" asp-action="Index">Master Module</a></li>
                    <li class="breadcrumb-item active">Add Or Update</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row col-md-12">
                            @Html.Partial("_AlertPartial")
                        </div>
                        <h2 class="card-title">Form Master Module</h2>
                    </div>
                    <form class="form-horizontal" method="post">
                        <div class="card-body">
                            <div class="form-group row">
                                @Html.LabelFor(x => x.ModuleId, "Module ID", new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.ModuleId, new { @class = "form-control", @placeholder = "Module ID" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.ModuleDesc, "Module Desc", new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.ModuleDesc, new { @class = "form-control", @placeholder = "Module Desc" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Info1, "Info 1", new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.Info1, new { @class = "form-control", @placeholder = "Info1" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Info2, "Info 2", new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.Info2, new { @class = "form-control", @placeholder = "Info 2" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Info3, "Info 3", new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.Info3, new { @class = "form-control", @placeholder = "Info 3" })
                                </div>
                            </div>
                            <div style="text-align:center">
                                <button type="submit" title="Cancel" class="btn btn-outline-warning btn-sm" asp-controller="MsModule" asp-action="Index">Cancel</button>
                                <button type="submit" title="Save" class="btn btn-outline-primary btn-sm" asp-controller="MsModule" asp-action="AddOrUpdate" asp-route-MsModule="@Model">Save</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
@section CustomJsFooter
{

    $("#msmoduledt").DataTable({
    "responsive": true, "lengthChange": false, "autoWidth": false,
    "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
    }).buttons().container().appendTo('#msmoduledt_wrapper .col-md-6:eq(0)');

}