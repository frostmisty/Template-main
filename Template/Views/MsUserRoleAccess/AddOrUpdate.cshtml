@using Template.ViewModels
@model MsUserRoleAccessViewModel
@{
    ViewData["Title"] = "Home UserRoleAccess";
    //Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Master UserRole Access</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="MsUserRoleAccess" asp-action="Index">Master UserRole Access</a></li>
                    <li class="breadcrumb-item active">Add Or Update</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row col-md-12">
                            @Html.Partial("_AlertPartial")
                        </div>
                        <h2 class="card-title">Form Master UserRole Access</h2>
                    </div>
                    <form class="form-horizontal" method="post">
                        <div class="card-body">
                            @Html.HiddenFor(x => x.AccessID)
                            <div class="form-group row">
                                @Html.LabelFor(x => x.UserRoleId, "Module Id", new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    <select asp-for="@Model.UserRoleId" asp-items="@Model.GetUserRole" class="form-control select2-blue"></select>
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.PageId, "Page Id", new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    <select asp-for="@Model.PageId" asp-items="@Model.GetPage" class="form-control select2-blue"></select>
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Permission, "Permission", new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    <select asp-for="@Model.Permission" asp-items="@Model.GetPermission" multiple="multiple" class="form-control select2"></select>
                                </div>
                            </div>

                            <div style="text-align:center">
                                <button type="submit" title="Cancel" class="btn btn-outline-warning btn-sm" asp-controller="MsUserRoleAccess" asp-action="Index">Cancel</button>
                                <button type="submit" title="Save" class="btn btn-outline-primary btn-sm" asp-controller="MsUserRoleAccess" asp-action="AddOrUpdate" asp-route-MsUserRoleAccess="@Model">Save</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
@section CustomJsFooter
{
    $('.select2').select2();
    $('.select2bs4').select2({
    theme: 'bootstap4'
    })

    $('#PageId').change(function(){
    var value = $('#PageId').find('option:selected').val();
    alert(value)
    })
}