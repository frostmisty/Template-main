@using Template.ViewModels
@model MsUserViewModel
@{
    ViewData["Title"] = "Home User";
    //Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Master User</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="MsUser" asp-action="Index">Master User</a></li>
                    <li class="breadcrumb-item active">Add Or Update</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row col-md-12">
                            @Html.Partial("_AlertPartial")
                        </div>
                        <h2 class="card-title">Form Master User</h2>
                    </div>
                    <form class="form-horizontal" method="post">
                        <div class="card-body">
                            <div class="form-group row">
                                @Html.LabelFor(x => x.UserId, "User Id", new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.UserId, new { @class = "form-control", @placeholder = "User ID" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.ModuleId, "Module Id", new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    <select asp-for="@Model.ModuleId" asp-items="@Model.GetModule" class="form-control select2-blue"></select>
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.UserRoleId, "UserRole Id", new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    <select asp-for="@Model.UserRoleId" asp-items="@Model.GetUserRole" class="form-control select2-blue"></select>
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.FullName, "Full Name", new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", @placeholder = "FullName" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Email, "Email", new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Info1, "Info1", new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.Info1, new { @class = "form-control", @placeholder = "Info1" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Info2, "Info2", new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.Info2, new { @class = "form-control", @placeholder = "Info2" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(x => x.Info3, "Info3", new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.Info3, new { @class = "form-control", @placeholder = "Info3" })
                                </div>
                            </div>
                            <div style="text-align:center">
                                <button type="submit" title="Cancel" class="btn btn-outline-warning btn-sm" asp-controller="MsUser" asp-action="Index">Cancel</button>
                                <button type="submit" title="Save" class="btn btn-outline-primary btn-sm" asp-controller="MsUser" asp-action="AddOrUpdate" asp-route-MsUser="@Model">Save</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
@section CustomJsFooter
{
    $('.select2').select2();
    $('.select2bs4').select2({
        theme: 'bootstap4'
    })
}